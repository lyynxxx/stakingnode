[Unit]
Description=Lighthouse Beacon Chain
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=lightbc
LimitNOFILE=5120
LimitNPROC=5120
ExecStart=/opt/lighthouse-bc/bin/lighthouse bc --network rposten --datadir /opt/lighthouse-bc/data --staking --eth1-endpoints http://127.0.0.1:8545
InaccessibleDirectories=/home /var
ReadOnlyDirectories=/etc /usr

[Install]
WantedBy=multi-user.target
